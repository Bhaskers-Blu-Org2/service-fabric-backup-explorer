<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Build">
  <Import Project="$(EnvironmentConfig)" />
  <Import Project="$(SRCROOT)\properties\service_fabric_managed_test.props" />
  <PropertyGroup>
    <AssemblyName>Microsoft.ServiceFabric.Tools.RCBackupGenerator</AssemblyName>
    <RootNamespace>Microsoft.ServiceFabric.Tools.RCBackupGenerator</RootNamespace>
    <AssemblyTitle>Microsoft.ServiceFabric.Tools.RCBackupGenerator</AssemblyTitle>
    <AssemblyDescription>Microsoft Azure Service Fabric Reliable Collection Backup generator</AssemblyDescription>
    <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
    <OutputType>Exe</OutputType>
    <ProjectGuid>{DEAC9316-70ED-4C3E-BBA9-36CBEBE5A0FC}</ProjectGuid>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Program.cs" />
    <Compile Include="ComplexTypesBackupGenerator.cs" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Runtime.Serialization" />
    <Reference Include="System.Xml" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="$(PkgMsTest_Corext)\Microsoft.VisualStudio.QualityTools.UnitTestFramework.dll" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(SRCROOT)\prod\src\managed\Api\Dlls\System.Fabric\System.Fabric.csproj" />
    <ProjectReference Include="$(SrcRoot)\prod\src\managed\Microsoft.ServiceFabric.Data.Impl\Microsoft.ServiceFabric.Data.Impl.csproj" />
    <ProjectReference Include="$(SrcRoot)\prod\src\managed\Microsoft.ServiceFabric.Data.Interfaces\Microsoft.ServiceFabric.Data.Interfaces.csproj" />
    <ProjectReference Include="$(SrcRoot)\prod\src\managed\Microsoft.ServiceFabric.Data\Microsoft.ServiceFabric.Data.csproj" />
    <ProjectReference Include="$(SRCROOT)\prod\tools\RCBackupExplorer\RCBackupParserTests\UserType\UserType.csproj" />
    <ProjectReference Include="$(SRCROOT)\prod\tools\ReliabilitySimulator\ReliabilitySimulator.csproj" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <Target Name="AfterBuild">
    <ItemGroup>
      <BinplaceFiles Include="$(OutputPath)**\*" Exclude="$(OutputPath)**\*.pdb;$(OutputPath)**\*.lib" />
      <SymbolFiles Include="$(OutputPath)**\*.pdb" />
    </ItemGroup>
    <Copy SourceFiles="@(BinplaceFiles)" DestinationFolder="$(BinariesBuildTypeArchDirectory)\bin\FabricUnitTests" SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(SymbolFiles)" DestinationFolder="$(BinariesBuildTypeArchDirectory)\symbols" SkipUnchangedFiles="true" />
  </Target>
</Project>